<form action="/api/session/register" method="post" class="container" style="width: 30%; margin-top:2%">
        <label for="first_name">
        First name
        <input type="text" name="first_name" id="first_name" placeholder="First Name">
        </label>
        <label for="last_name">
        Last Name <input type="text" name="last_name" id="last_name" placeholder="Last Name">
        </label>
        <label for="age">
        Age <input type="number" name="age" id="age" placeholder="Age">
        </label>
        <label for="email">
        Email <input type="email" name="email" id="email" placeholder="Email">
        </label>
        <label for="password">
        Password <input type="password" name="password" id="password" placeholder="Password">
        </label>
        <input type="submit" value="Sign Up">
</form>

